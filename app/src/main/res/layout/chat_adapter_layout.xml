<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/opsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/opsMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/msg_back"
                android:padding="20dp"
                android:text="Ops Message is to be sent to the ops broskii"
                android:textColor="#424242" />

            <TextView
                android:layout_gravity="end"
                android:id="@+id/opsMsgTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingEnd="20dp"
                android:text="03-25-2002 01:25 AM"
                android:textSize="10sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/myLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_gravity="right"
                android:background="@drawable/msg_back_my"
                android:padding="20dp"
                android:text="Ops Message is to be sent to the ops broskii"
                android:textColor="#FFFFFF" />

            <TextView
                android:gravity="right"
                android:layout_gravity="end"
                android:id="@+id/myMsgTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="100dp"
                android:paddingEnd="20dp"
                android:text="03-25-2002 01:25 AM"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>